{
  "functions": {
    "api/**/*.js": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/process-email-queue",
      "schedule": "* * * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/scan",
      "destination": "/scan.html"
    },
    {
      "source": "/((?!api|scan).*)",
      "destination": "/index.html"
    }
  ]
}
