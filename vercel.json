{
  "buildCommand": "npm run build",
  "functions": {
    "api/**/*.js": {
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "crons": [
    {
      "path": "/api/process-email-queue",
      "schedule": "* * * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/scan",
      "destination": "/scan.html"
    },
    {
      "source": "/scan.html",
      "destination": "/scan.html"
    },
    {
      "source": "/((?!api|scan|.*\\.html$).*)",
      "destination": "/index.html"
    }
  ]
}
