{
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "headers": [
    { "source": "/assets/(.*\\.js)", "headers": [{ "key": "Content-Type", "value": "application/javascript" }] },
    { "source": "/assets/(.*\\.css)", "headers": [{ "key": "Content-Type", "value": "text/css" }] }
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 10
    }
  }
}